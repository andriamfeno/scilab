// =============================
//  Fonctions du Projet
// =============================
// Fonction utilitaire : afficher une image dans un frame
function importer_image()
    global img;
    global nom_fichier;
    global frame_image;
    global new_frame;
    
    [file, path] = uigetfile(["*.png"; "*.jpg"; "*.jpeg"; "*.bmp"; "*.tif"], "Choisir une image");
    if file <> "" then
        img = imread(path + "/" + file);
        nom_fichier = file;
        
        // Sauvegarder la position du frame AVANT de le supprimer
        pos = frame_image.position; // [x, y, largeur, hauteur]
        
        // Supprimer le frame décoratif
        delete(frame_image);
        
        // Taille de la figure
        fig_pos = get(f, "figure_position"); // [x, y, largeur, hauteur]
        fig_width  = fig_pos(3);
        fig_height = fig_pos(4);
        
        // Créer un axe exactement à la place du frame
        new_frame = newaxes();
        new_frame.axes_bounds = [pos(1)/fig_width, pos(2)/fig_height, ...
                                   pos(3)/fig_width, pos(4)/fig_height];
        
        // Afficher l’image dans cet axe
        imshow(img, new_frame);
        axes_handle.axes_visible = "off"; // enlever les graduations
    else
        messagebox("Aucune image sélectionnée.", "Information");
    end
endfunction



        
